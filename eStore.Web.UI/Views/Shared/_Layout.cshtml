<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @*    <meta name="viewport" content="width=device-width" />*@
    @Styles.Render("~/Content/bootstrap/css")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">eStore</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="dropdown">@Html.ActionLink("Home", "Index", "Home", new
                                {
                                    area = "Store"
                                }, null)</li>
                <li class="dropdown">@Html.ActionLink("Catalog", "Index", "Genre", new
                                {
                                    area = "Store"
                                }, null)</li>
                @if (IsEditAllowed)
                {
                    <li class="dropdown">@Html.ActionLink("Users", "Index", "User", new
                                    {
                                        area = "Admin"
                                    }, null)</li>    
                }
            </ul>
            <div class="pull-right">@Html.Partial("_LogOnPartial")</div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @if (IsSectionDefined("sidebar"))
            {
                <div class="col-md-2">
                    @RenderSection("sidebar", required: false)
                </div>
            }
            <div id="content" @(IsSectionDefined("sidebar") ? Html.Raw("class=col-md-10") : Html.Raw("class=col-md-12"))>
                <noscript>
                    <div class="alert">
                        <button type="button" class="close" data-dismiss="alert">
                            &times;</button>
                        <strong>Warning!</strong> Please enable JavaScript in your browser!
                    </div>
                </noscript>
                @if (IsSectionDefined("featured"))
                {
                    <div>
                        <div class="jumbotron">
                            @RenderSection("featured", required: false)
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-7 pull-right">
                        @RenderSection("searchbar", false)
                    </div>
                </div>
                <div class="row">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <footer id="footer">
                <p>&copy; 2013, Your Company Limited</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/common")
    @RenderSection("scripts", required: false)
</body>
</html>
