<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Styles.Render("~/Content/bootstrap/css")
    @Styles.Render("~/Content/css")

</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "Store"})">eStore</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <li class="active">@Html.ActionLink("Home", "Index", "Home", new{ area = "Store" }, null)</li>
          <li>@Html.ActionLink("Catalog", "Index", "Genre", new{ area = "Store" }, null)</li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li><a href="#">Separated link</a></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
        </ul>
        @using (Html.BeginForm("Go", "Search", new { area = "store" }, FormMethod.Get, new { role="search", @class = "navbar-form navbar-left", id="srchfrm" }))
        {
            <div class="form-group">
                <input id="srchtxt" name="searchqry" type="search" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        }
        @Html.Action("CurrencySelector", "Home", new { area = "store" })
        @{Html.RenderPartial("_RightNavbarPane");}
      </div>
    </nav>

    <div class="container">
        <div class="row">
            <div id="content-left">
            @if (IsSectionDefined("sidebar"))
            {
                <div class="col-md-2">
                    @RenderSection("sidebar", required: false)
                </div>
            }
            </div>
            <div id="content" @(IsSectionDefined("sidebar") ? Html.Raw("class=col-md-10") : Html.Raw("class=col-md-12"))>
                <noscript>
                    <div class="alert">
                        <button type="button" class="close" data-dismiss="alert">
                            &times;</button>
                        <strong>Warning!</strong> Please enable JavaScript in your browser!
                    </div>
                </noscript>
                @if (IsSectionDefined("featured"))
                {
                    <div>
                        <div class="jumbotron">
                            @RenderSection("featured", required: false)
                        </div>
                    </div>
                }
                <div class="row">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <footer id="footer">
                <p>&copy; 2013, Your Company Limited</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/eStore")
    @RenderSection("scripts", required: false)
</body>
</html>
