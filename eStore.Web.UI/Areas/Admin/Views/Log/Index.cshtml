@model LogModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Date</th>
            <th>Severity</th>
            <th>App Module</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        <!-- ko foreach: logVM.items -->
        <tr>
            <td data-bind="text: date"></td>
            <td data-bind="text: severity"></td>
            <td data-bind="text: appModule"></td>
            <td data-bind="text: data"></td>
        </tr>
        <!-- /ko-->
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/Scripts/app/estore.logviewmodel.js")

    <script type="text/javascript">
        estore.vm.logVM = new estore.LogModel(@Html.ToJSON(Model));
    </script>

}