@model eStore.Web.UI.Areas.Account.ViewModels.RegisterModel

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", new {area = "account"}, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Register Form</legend>
        <ol>
            <li>
                @Html.Label("Role")
                @Html.DropDownListFor(model => model.RoleId, (SelectList)ViewBag.RoleList, "--select--")
            </li>
            <li>
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.PasswordConfirm)
                @Html.PasswordFor(m => m.PasswordConfirm)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            @*<li>
                <div class="editor-label">
                    <label for="image">FileName:</label>
                </div>
                <div class="editor-field">
                    <input name="image" id="image" type="file" />
                </div>
            </li>*@
        </ol>
        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

<script defer="defer" type="text/javascript">
    $('#UserName').focus();
</script>