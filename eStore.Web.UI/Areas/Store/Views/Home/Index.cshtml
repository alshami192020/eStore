@model HomeModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="carouselbox">
        <div class="col-md-9">
            <div id="mainCarousel" class="carousel slide">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#mainCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#mainCarousel" data-slide-to="1"></li>
                    <li data-target="#mainCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/Images/Marketing/Carousel/01.jpg" alt="...">
                        <div class="carousel-caption">
                            Hello
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/Marketing/Carousel/02.jpg" alt="...">
                        <div class="carousel-caption">
                            Hello
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/Marketing/Carousel/03.jpg" alt="...">
                        <div class="carousel-caption">
                            Hello
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/Images/Marketing/Carousel/04.jpg" alt="...">
                        <div class="carousel-caption">
                            Hello
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#mainCarousel" data-slide="prev">
                    <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#mainCarousel" data-slide="next">
                    <span class="icon-next"></span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <h2>Best Sellers</h2>
    @{Html.RenderPartial("_Books", new BookListModel { Books = Model.BestSellers });}
</div>

<div class="row">
    <h2>New books</h2>
    @{Html.RenderPartial("_Books", new BookListModel { Books = Model.NewBooks });}
</div>


@section sidebar{
    @Html.Action("Catalog", "Genre")
    @Html.Action("Top", "Author")
}

